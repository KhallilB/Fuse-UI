{
  "name": "fuse-ui",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:affected": "turbo run test --affected",
    "lint": "turbo run format-and-lint",
    "lint:fix": "turbo run format-and-lint:fix",
    "lint:affected": "turbo run format-and-lint --affected",
    "check-types": "turbo run check-types",
    "fuseui:up": "docker compose up --build",
    "fuseui:down": "docker compose down -v",
    "fuseui:prod": "docker build --target web-prod -t khallilb/fuse-ui:web --target server-prod -t khallilb/fuse-ui:server .",
    "fuseui:test": "docker compose run --rm web pnpm test && docker compose run --rm server pnpm test",
    "release": "release-it",
    "release:dry-run": "release-it --dry-run",
    "release:ci": "release-it --ci --no-git.requireCleanWorkingDir",
    "publish-packages": "pnpm publish-packages:cli && pnpm publish-packages:sdk",
    "publish-packages:cli": "pnpm --filter @fuseui/cli publish --no-git-checks --access public || pnpm --filter @fuseui/cli publish --no-git-checks --access public --force",
    "publish-packages:sdk": "pnpm --filter @fuseui/sdk publish --no-git-checks --access public || pnpm --filter @fuseui/sdk publish --no-git-checks --access public --force",
    "publish-packages:dry-run": "pnpm --filter @fuseui/cli publish --dry-run --no-git-checks --access public && pnpm --filter @fuseui/sdk publish --dry-run --no-git-checks --access public"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "husky": "^9.1.7",
    "release-it": "^19.0.5",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=20"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}",
      "push": true
    },
    "github": {
      "release": true,
      "draft": false,
      "releaseName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      },
      "@release-it/bumper": {
        "out": [
          "packages/*/package.json",
          "apps/*/package.json"
        ]
      }
    },
    "hooks": {
      "after:bump": "pnpm install && pnpm build",
      "after:release": "echo 'ðŸš€ Released ${name} v${version}'"
    }
  },
  "version": "0.2.2"
}
